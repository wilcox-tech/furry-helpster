<ul class="breadcrumb">
  <li>
    <%= link_to @document.doc_group.version.friendly_name, @document.doc_group.version %>
    <span class="divider">&raquo;</span>
  </li>
  <%# down the rabbit hole.. %>
  <%= n = @document.doc_group
      t = []
      until n.nil?
        t << "<li>#{link_to(n.name, n)}<span class=\"divider\">&raquo;</span></li>"
        n = n.parent
      end
      t.reverse.join.html_safe
  %>
  <li class="active">
    <%= @document.name %>
  </li>
</ul>