<%= form_for([:admin, @doc_group], :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @doc_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@doc_group.errors.count, "error") %> prohibited this doc_group from being saved:</h2>

      <ul>
      <% @doc_group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :version_id, :class => 'control-label' %>

    <div class="controls">
      <%= collection_select(:doc_group, :version_id, Version.all, :id, :friendly_name) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :parent_id, :class => 'control-label' %>

    <div class="controls">
      <%= f.number_field :parent_id %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>

    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :private, :class => 'control-label' %>

    <div class="controls">
      <%= f.check_box :private %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :primary_doc_id, :class => 'control-label' %>

    <div class="controls">
      <%= f.number_field :primary_doc_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
