<% provide :title, t('.html_title') %>

<h1 class="page-header"><%= t('.title') %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= t('.group') %></th>
      <th><%= t('.name') %></th>
      <th><%= t('.content') %></th>
      <th><%= t('.private') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.doc_group.friendly_name %></td>
    <td><%= document.name %></td>
    <td><%= truncate(document.content) %></td>
    <td><%= document.private %></td>
    <td><%= link_to t('.show'), document %></td>
    <td><%= link_to t('.edit'), edit_admin_document_path(document) %></td>
    <td><%= link_to t('.destroy'), document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new'), new_admin_document_path %>
